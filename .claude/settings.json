{
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm run build)",
      "Bash(npm install:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(tmux:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(rm:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(echo:*)",
      "Bash(sleep:*)",
      "Bash(chmod:*)",
      "Bash(tree:*)",
      "Bash(open:*)",
      "Bash(./send-message.sh:*)",
      "Bash(./multi-agent-tmux/send-message.sh:*)",
      "Bash(./clear-flags.sh:*)",
      "Bash(./orchestrate.sh:*)",
      "Bash(multi-agent-tmux/send-message.sh:*)",
      "Read(~/.zshrc)",
      "Write(dist/**)",
      "Edit(dist/**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "./.claude/hooks/session_log.sh"
          }
        ]
      }
    ]
  }
}
